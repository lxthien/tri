<div class="news-item">
    <div class="news-item-wrapper">
        <div class="media-thumb">
            <picture>
                <!--[if IE 9]><video style="display: none"><![endif]-->
                <source
                    data-srcset="{{ (vich_uploader_asset(row, 'imageFile') ? vich_uploader_asset(row, 'imageFile') : asset('assets/images/no-image.png')) | imagine_filter('news_345_250') }}"
                    media="(max-width: 800px)" />
                <source
                    data-srcset="{{ (vich_uploader_asset(row, 'imageFile') ? vich_uploader_asset(row, 'imageFile') : asset('assets/images/no-image.png')) | imagine_filter('news_277_220') }}"
                    media="(min-width: 801px)" />
                <!--[if IE 9]></video><![endif]-->
                <img
                    src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                    data-src="{{ (vich_uploader_asset(row, 'imageFile') ? vich_uploader_asset(row, 'imageFile') : asset('assets/images/no-image.png')) | imagine_filter('news_277_220') }}"
                    class="mr-3 img-thumbnail lazyload"
                    alt="{{row.getTitle()}}" />
            </picture>
            <a title="{{ row.getTitle() }}" href="{{ path('news_show', {'slug': row.getUrl() }) }}">
                <i class="fa fa-link"></i>
            </a>
        </div>
        <div class="media-body">
            <h5 class="mt-0 mb-1">
                <a title="{{ row.getTitle() }}" href="{{ path('news_show', {'slug': row.getUrl() }) }}" title="{{ row.getTitle() }}">
                    <span>{{ row.getTitle() }}</span>
                </a>
            </h5>
            <p>{{ row.getDescription()|slice(0, 105) }}</p>
        </div>
    </div>
</div>